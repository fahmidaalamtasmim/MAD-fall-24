<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activity1">

    <ImageView
        android:id="@+id/manimage"
        android:src="@drawable/man"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="5:2"
        app:layout_constraintVertical_bias=".24"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <EditText
        android:id="@+id/manage"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:hint="Age"
        android:textColorHint="@color/text1"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
       <EditText

            android:id="@+id/manheight"
            android:inputType="numberDecimal"
           android:padding="10dp"
           android:hint="Heigth"
            android:textColorHint="@color/text1"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manage"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
    <EditText

        android:id="@+id/manweight"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:hint="Weight"
        android:textColorHint="@color/text1"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manheight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/calculate"
        android:textColor="@color/text1"
        android:text="Calculate"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manweight"/>

    <TextView
        android:id="@+id/score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculate"
        android:textColor="@color/text1"
        android:text="Score is : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>